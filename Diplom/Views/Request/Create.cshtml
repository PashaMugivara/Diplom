@model Diplom.Requestion.CreateRequestRequest
@{
    ViewBag.Title = "Добавление пользователя";
}
<form asp-action="Create" asp-controller="Request">
    <div class="form-group">
        <label asp-for="Description" class="control-label">Описание проблемы</label>
        <input type="text" asp-for="Description" class="form-control" />
    </div>
    <div>
        <label asp-for="PositionId"></label>
        <select asp-for="PositionId" asp-items="ViewBag.Positions"></select>
        <span asp-validation-for="PositionId"></span>
    </div>
    <div>
        <label asp-for="TypeId"></label>
        <select asp-for="TypeId" asp-items="ViewBag.Types"></select>
        <span asp-validation-for="TypeId"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Отправить" class="btn btn-default" />
    </div>
</form>