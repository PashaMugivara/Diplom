@model Diplom.Requestion.PositionRequest
@{
    ViewBag.Title = "Добавление пользователя";
}

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label">Название</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Floor" class="control-label">Этаж</label>
        <input type="text" asp-for="Floor" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="CoordX" class="control-label">Координата X</label>
        <input type="text" asp-for="CoordX" class="form-control" />
        <label asp-for="CoordY" class="control-label">Координата Y</label>
        <input type="text" asp-for="CoordY" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Добавить</button>
</form>
